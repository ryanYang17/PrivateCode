<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#e5e5e5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_list_row"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/list_row_map_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#a05c5c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/list_row_time_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/list_row_map_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/list_row_name_txt"

            android:layout_below="@+id/list_row_time_txt"
            android:layout_alignLeft="@+id/list_row_time_txt"
            android:layout_alignStart="@+id/list_row_time_txt"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/list_row_price_txt"
            android:layout_alignTop="@+id/list_row_time_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />
    </RelativeLayout>

    <ImageView

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_list_row_info"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="200dp"
        android:background="#191616"
        android:layout_marginLeft="30dp" />

</RelativeLayout>