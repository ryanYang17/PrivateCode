<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:background="#000000">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/setting_back_btn"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Setting"
            android:id="@+id/setting_textview1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignTop="@+id/setting_back_btn"
            android:layout_toRightOf="@+id/setting_back_btn"
            android:layout_toEndOf="@+id/setting_back_btn"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setting_head_relativelayout">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/setting_head_img"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_setting_user_head"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_head_relativelayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Name"
                    android:id="@+id/setting_textview2"
                    android:layout_marginLeft="92dp"
                    android:layout_marginStart="92dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/setting_name_edit"
                    android:layout_gravity="right"
                    android:layout_below="@+id/setting_textview2"
                    android:layout_alignLeft="@+id/setting_textview2"
                    android:layout_alignStart="@+id/setting_textview2" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/setting_name_change"
                    android:src="@drawable/ic_setting_drawable"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/setting_name_edit"
                    android:layout_alignEnd="@+id/setting_name_edit"
                    android:layout_marginBottom="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/setting_cellphone_edit"
                    android:layout_gravity="right"
                    android:layout_below="@+id/setting_textview3"
                    android:layout_alignLeft="@+id/setting_textview3"
                    android:layout_alignStart="@+id/setting_textview3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Cellphone"
                    android:id="@+id/setting_textview3"
                    android:layout_marginLeft="92dp"
                    android:layout_marginStart="92dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/setting_cellphone_change"
                    android:src="@drawable/ic_setting_drawable"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/setting_cellphone_edit"
                    android:layout_alignEnd="@+id/setting_cellphone_edit"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/setting_email_edit"
                    android:layout_gravity="right"
                    android:layout_below="@+id/setting_textview4"
                    android:layout_alignLeft="@+id/setting_textview4"
                    android:layout_alignStart="@+id/setting_textview4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Email"
                    android:id="@+id/setting_textview4"
                    android:layout_marginLeft="92dp"
                    android:layout_marginStart="92dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/setting_email_change"
                    android:src="@drawable/ic_setting_drawable"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/setting_email_edit"
                    android:layout_alignEnd="@+id/setting_email_edit"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:id="@+id/setting_signout_btn"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:background="@drawable/selector_corners_blue_button"
            android:textColor="#ffffff" />

    </RelativeLayout>


</LinearLayout>
