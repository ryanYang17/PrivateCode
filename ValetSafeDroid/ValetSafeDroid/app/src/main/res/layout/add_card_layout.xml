<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:background="#000000">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/imageView9"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView12"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp"
            android:textColor="#ffffff"
            android:gravity="center" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="320dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60.5dp"
            android:layout_marginBottom="0.0dp">
            <TextView
                android:text="Card Number"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="113.5dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="16.5dp"
                android:layout_marginLeft="10.5dp"
                android:gravity="right" />
            <EditText
                android:inputType="textPersonName"
                android:layout_width="189.0dp"
                android:layout_height="20dp"
                android:id="@+id/register_edit_name"
                android:background="#41475f"
                android:hint="     user name"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.5dp"
            android:layout_marginBottom="0.0dp">
            <TextView
                android:text="Card Name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="113.5dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="16.5dp"
                android:layout_marginLeft="10.5dp"
                android:gravity="right" />
            <EditText
                android:inputType="textPersonName"
                android:layout_width="189.0dp"
                android:layout_height="20dp"
                android:id="@+id/register_edit_phone"
                android:background="#41475f"
                android:hint="     cell phone number"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.5dp"
            android:layout_marginBottom="0.0dp">
            <TextView
                android:text="Expiration"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="113.5dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="16.5dp"
                android:layout_marginLeft="10.5dp"
                android:gravity="right" />
            <EditText
                android:inputType="textPersonName"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/register_edit_email"
                android:background="#41475f"
                android:hint="     E-mail address"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="12dp" />

            <EditText
                android:inputType="textPersonName"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/editText7"
                android:background="#41475f"
                android:hint="     E-mail address"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="12dp"
                android:layout_marginLeft="9dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.5dp"
            android:layout_marginBottom="0.0dp">
            <TextView
                android:text="CVV"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="113.5dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="16.5dp"
                android:layout_marginLeft="10.5dp"
                android:gravity="right" />
            <EditText
                android:inputType="textPassword"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/register_edit_password"
                android:background="#41475f"
                android:hint="  password"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView15"
            android:src="@drawable/ic_add_card_visa"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:src="@drawable/ic_add_card_master"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
</LinearLayout>
