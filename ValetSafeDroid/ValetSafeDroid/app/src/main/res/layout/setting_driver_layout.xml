<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:background="#000000">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/setting_driver_back_btn"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Setting"
            android:id="@+id/setting_driver_textview1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/setting_driver_back_btn"
            android:layout_toEndOf="@+id/setting_driver_back_btn"
            android:layout_marginLeft="10dp"

            android:textColor="#ffffff"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/setting_driver_head_img"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_setting_user_head"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_driver_head_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:background="#ffffff"
            android:id="@+id/setting_driver_linearlayout1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Name"
                    android:id="@+id/setting_driver_textview3"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/setting_driver_name_edit"
                    android:layout_alignStart="@+id/setting_driver_name_edit" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/setting_driver_name_edit"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/setting_driver_name_img"
                    android:src="@drawable/ic_setting_drawable"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/setting_driver_name_edit"
                    android:layout_alignEnd="@+id/setting_driver_name_edit"
                    android:layout_marginBottom="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/setting_driver_phone_edit"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Cell phone"
                    android:id="@+id/setting_driver_textview4"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/setting_driver_phone_edit"
                    android:layout_alignStart="@+id/setting_driver_phone_edit" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/setting_driver_phone_img"
                    android:src="@drawable/ic_setting_drawable"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/setting_driver_phone_edit"
                    android:layout_alignEnd="@+id/setting_driver_phone_edit" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/setting_driver_email_edit"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="E-mail"
                    android:id="@+id/setting_driver_textview5"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/setting_driver_email_edit"
                    android:layout_alignStart="@+id/setting_driver_email_edit" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/setting_driver_email_img"
                    android:src="@drawable/ic_setting_drawable"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/setting_driver_email_edit"
                    android:layout_alignEnd="@+id/setting_driver_email_edit"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:id="@+id/setting_signout_btn"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:background="@drawable/selector_corners_blue_button"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Account"
            android:id="@+id/setting_driver_textview2"
            android:layout_alignTop="@+id/setting_driver_head_img"
            android:layout_alignLeft="@+id/setting_signout_btn"
            android:layout_alignStart="@+id/setting_signout_btn"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SGD 200"
            android:id="@+id/setting_driver_account_txt"
            android:layout_alignTop="@+id/setting_driver_textview2"
            android:layout_toRightOf="@+id/setting_signout_btn"
            android:layout_toEndOf="@+id/setting_signout_btn"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:textColor="#000000" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available for jobs       "
            android:id="@+id/setting_driver_available_switch"
            android:checked="false"
            android:layout_above="@+id/setting_driver_linearlayout1"
            android:layout_alignLeft="@+id/setting_driver_textview2"
            android:layout_alignStart="@+id/setting_driver_textview2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SJP4406J/Economy Car"
            android:id="@+id/setting_driver_car_info_txt"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/setting_driver_linearlayout1"
            android:layout_alignLeft="@+id/setting_driver_head_img"
            android:layout_alignStart="@+id/setting_driver_head_img" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_driver_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="3"
            android:numStars="5"
            android:layout_alignBottom="@+id/setting_driver_car_info_txt"
            android:layout_alignRight="@+id/setting_driver_account_txt"
            android:layout_alignEnd="@+id/setting_driver_account_txt" />
    </RelativeLayout>


</LinearLayout>
