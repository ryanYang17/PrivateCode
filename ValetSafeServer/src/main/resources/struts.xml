<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <constant name="struts.devMode" value="true"/>

    <package name="student" extends="struts-default" namespace="/">
        <action name="PassengerSet" class="me.codeboy.action.PassengerSettingAction" method="PassengerSet"/>
        <action name="loginuser" class="me.codeboy.action.LoginAction" method="loginuser"/>
        <action name="SendEmailForUser" class="me.codeboy.action.LoginAction" method="SendEmailForUser"/>


        <action name="addRegisterUser" class="me.codeboy.action.UserAction" method="addRegisterUser"/>
        <action name="loadUserById" class="me.codeboy.action.UserAction" method="loadUserById"/>
        <action name="loadUserByInfo" class="me.codeboy.action.UserAction" method="loadUserByInfo"/>
        <action name="createOrder" class="me.codeboy.action.UserAction" method="createOrder"/>
        <action name="getHistoryOrderByUser" class="me.codeboy.action.UserAction" method="getHistoryOrderByUser"/>

        <action name="addRegisterDriver" class="me.codeboy.action.DriverAction" method="addRegisterDriver"/>
        <action name="loadDriverById" class="me.codeboy.action.DriverAction" method="loadDriverById"/>
        <action name="updateOrderAfterReceiveDriver" class="me.codeboy.action.DriverAction" method="updateOrderAfterReceiveDriver"/>
        <action name="updateOrderAfterPaid" class="me.codeboy.action.DriverAction" method="updateOrderAfterPaid"/>
        <action name="getOrderList" class="me.codeboy.action.DriverAction" method="getOrderList"/>

    </package>

</struts>
